<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:backgroundTint="@color/blue"
    android:background="@drawable/bg_curved_rectangle"
    android:padding="10dp"
    android:layout_marginBottom="5dp">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/notesTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:gravity="start"
        android:layout_weight="1"
        android:textSize="24sp"/>
        <TextView
            android:id="@+id/notesDateTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="end"
            android:inputType="date"
            android:text="21/12/1999"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:id="@+id/notesDescTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description for title, events that happend, about to happen etc......"
        android:textSize="16sp"/>

</androidx.appcompat.widget.LinearLayoutCompat>